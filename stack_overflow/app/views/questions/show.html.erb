

<div class="row">
  <div class="large-12 columns">
    <h2>Question</h2>
  </div>
</div>


<div class="row">
  <div class="large-12 columns">
    <p>
      <strong>Title:</strong>
      <%= @question.title %>
    </p>
    <p>
      <strong>Content:</strong>
      <%= @question.content %>
    </p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <ul>
      <% @answers.each do |answer| %>
      <li><%= link_to answer.response, question_answer_path(@question, answer) %></li>
      <% end %>
      <ul>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <h3>Answer this question</h3>
        <%= form_for [@question, @answer] do |f| %>

        <p>
          <%= f.label :response %><br>
          <%= f.text_area :response, :size => "20x10" %>
        </p>

        <%= f.submit %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= link_to 'Back', "/" %>
      </div>
    </div>

